{
  "name": "eviction-policy-backend",
  "version": "1.0.0",
  "description": "Express backend with custom caches, Redis rate limiting, and Mongo metrics for dad jokes",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:unit": "npm run test -- --selectProjects unit",
    "test:integration": "npm run test -- --selectProjects integration",
    "test:smoke": "npm run test -- -t smoke"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "@upstash/redis": "^1.31.6",
    "mongoose": "^7.6.3",
    "redis": "^4.6.7"
  },
  "jest": {
    "testEnvironment": "node",
    "projects": [
      { "displayName": "unit", "testMatch": ["**/tests/unit/**/*.test.js"] },
      { "displayName": "integration", "testMatch": ["**/tests/integration/**/*.test.js"] },
      { "displayName": "smoke", "testMatch": ["**/tests/smoke/**/*.test.js"] }
    ]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
